@model ShopCartViewModel
<div class="container">
    @foreach (var el in Model.shopCart.ListOrder)
    {
        <div class="alert alert-warning mt-3">
            <b>Тур</b>@el.tour.Address<br/>
            <b>Цена:</b> @el.tour.Price.ToString("c")
        </div>
    }
    <hr/>
    <div class="btn btn-danger" asp-controller="Order">Оплатить</div>
</div>
